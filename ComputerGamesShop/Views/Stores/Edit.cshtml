@model ComputerGamesShop.Models.Store

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoreID" />
            <div class="form-group">
                <label asp-for="StoreName" class="control-label"></label>
                <input asp-for="StoreName" class="form-control" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreCity" class="control-label"></label>
                <input asp-for="StoreCity" class="form-control" />
                <span asp-validation-for="StoreCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreStreet" class="control-label"></label>
                <input asp-for="StoreStreet" class="form-control" />
                <span asp-validation-for="StoreStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoresPhoneNumber" class="control-label"></label>
                <input asp-for="StoresPhoneNumber" class="form-control" />
                <span asp-validation-for="StoresPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
